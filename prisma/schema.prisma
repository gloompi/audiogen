generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AudioGeneration {
  id        String   @id @default(cuid())
  prompt    String
  voiceId   String
  userId    String   // Client-side session ID
  audioData String   @db.Text // Storing base64 audio data
  createdAt DateTime @default(now())
}
